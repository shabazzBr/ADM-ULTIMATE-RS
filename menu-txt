#!/bin/bash
source cabecalho
[[ -e /etc/bash.bashrc-bakup ]] && _autorun="\033[1;32m[ ON ]" || _autorun="\033[1;31m[ OFF ]"
echo -e "${cor[1]} =×=×=×=×=×=×=×=×=×=×=×=×=×=×=×=×=×=×=×=×=×=×=×=×=× ${cor[0]}"
echo -e "${cor[2]}${cor[5]} MENU GERENCIADOR!"
echo -e "${cor[1]} =×=×=×=×=×=×=×=×=×=×=×=×=×=×=×=×=×=×=×=×=×=×=×=×=× ${cor[0]}"
echo -e "${cor[2]} [0] •\033[1;37m [ VOLTAR / SAIR ]"
echo -e "${cor[2]} [1] •${cor[3]} GERENCIAR USUARIOS"
echo -e "${cor[2]} [2] •${cor[3]} FERRAMENTAS"
echo -e "${cor[2]} [3] •\033[1;33m [!]\033[1;32m ATUALIZAR"
echo -e "${cor[2]} [4] •\033[1;33m [!]\033[1;31m DESINSTALAR"
echo -e "${cor[2]} [5] •${cor[3]} MUDAR CORES SISTEMA"
echo -e "${cor[2]} [6] •${cor[3]} VERIFICAÇÕES $VERIFICAR_PID"
echo -e "${cor[2]} [7] •${cor[3]} AUTO INICIALIZAÇÃO $_autorun"
echo -e "${cor[2]} [8] •${cor[3]} MENU INSTALAÇÃO"
echo -e "${cor[1]} =×=×=×=×=×=×=×=×=×=×=×=×=×=×=×=×=×=×=×=×=×=×=×=×=×  ${cor[0]}"
